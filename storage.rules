rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isAuthed() { return request.auth != null; }
    function isOwner(path) { return isAuthed() && request.auth.uid == path[0]; }

    // Deny-all archive (CLI-only via SA)
    match /imports-archive/{uid}/{rest=**} {
      allow read, write: if false;
    }

    // Receipts & paystubs â€“ owner read; writes only via client for own uid
    match /receipts/{uid}/{file} {
      allow read: if isOwner([uid]);
      allow write: if isOwner([uid]) && request.resource.size < 5 * 1024 * 1024;
    }

    match /paystubs/{uid}/{file} {
      allow read: if isOwner([uid]);
      allow write: if isOwner([uid]) && request.resource.size < 10 * 1024 * 1024;
    }
  }
}